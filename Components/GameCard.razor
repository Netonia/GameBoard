@using LumexUI

<div class="bg-white rounded-lg shadow-md overflow-hidden max-w-sm">
    <div class="p-4">
        <div class="flex flex-col space-y-2">
            <img src="@Game.ImageUrl" alt="@Game.Title" class="w-full h-48 object-cover rounded-lg" />
            
            <div class="flex justify-between items-start">
                <h3 class="text-lg font-semibold">@Game.Title</h3>
                <button @onclick="OnToggleFavorite" class="text-red-500 hover:text-red-700">
                    @if (Game.IsFavorite)
                    {
                        <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-5 h-5 stroke-current fill-none" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                    }
                </button>
            </div>
            
            <div class="flex justify-between items-center text-sm text-gray-600">
                <span>@Game.Platform</span>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                    @Game.Genre
                </span>
            </div>
            
            <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">@Game.ReleaseDate.ToString("MMM yyyy")</span>
                <div class="flex items-center">
                    <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    <span class="ml-1 text-sm font-medium">@Game.Rating.ToString("F1")</span>
                </div>
            </div>
            
            <p class="text-sm text-gray-600 mt-2">@Game.Description</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public Game Game { get; set; } = new();
    [Parameter] public EventCallback<Game> OnFavoriteToggled { get; set; }

    private async Task OnToggleFavorite()
    {
        Game.IsFavorite = !Game.IsFavorite;
        await OnFavoriteToggled.InvokeAsync(Game);
    }
}